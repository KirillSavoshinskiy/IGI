@model Dictionary<Online_Auction.Models.Lot, Online_Auction.Models.Img>;

@{
    ViewBag.Title = "Все лоты";
    Layout = "_Layout";
}

<h2>Все лоты</h2>
<a asp-action="CreateLot">Создать лот</a>
<table class="table">
    <tr><th>Название лота</th><th>Фото лота</th><th>Владелец лота</th><th>Действия</th></tr>
    @foreach (var lot in Model)
    {
        <tr>
            <td><a class="btn badge-primary" asp-action="ProfileLot" asp-route-id="@lot.Key.Id">@lot.Key.Name</a></td>
            <td><img style="width: 50px; height: 40px" src="@lot.Value.ImgPath"/></td>
            <td><span>@lot.Key.User.UserName</span></td>
            <td>
                <form asp-action="DeleteLot" asp-route-id="@lot.Key.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>   
    }
    
</table>