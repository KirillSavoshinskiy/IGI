@using Microsoft.AspNetCore.Identity
@model Online_Auction.ViewModels.EditUserViewModel;

@{
    ViewBag.Title = "Профиль юзера";
    Layout = "_Layout";
}
 
<h2>Профиль юзера</h2> 

<div class="form-group">
    <input type="hidden" asp-for="Id" />
</div>

<div class="form-group">
    <label asp-for="UserName" class="control-label">Имя юзера:</label>
    <span class="badge-primary">@Model.UserName</span> 
</div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Email:</label> 
        <span class="badge-primary">@Model.Email</span> 
</div> 

<div class="form-group">
    <label class="control-label">Права доступа:</label>
    @foreach (IdentityRole role in Model.AllRoles)
    {
        if (Model.UserRoles.Contains(role.Name))
        {
            <span class="badge-primary">@role.Name</span> 
        } 
    }
</div>

 
