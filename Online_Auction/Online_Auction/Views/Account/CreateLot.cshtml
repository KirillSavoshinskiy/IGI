@model Online_Auction.ViewModels.CreateLotViewModel;

@{
    ViewBag.Title = "Создание лота";
    Layout = "_Layout";
}

<h2>Создание лота</h2>
<form method="post" asp-action="CreateLot" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <label asp-for="Name"></label><br/>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Description"></label><br/>
        <textarea asp-for="Description" name="description" cols="40" rows="3" class="form-control"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label asp-for="Price"></label><br/>
        <input type="number" asp-for="Price" class="form-control"/>
        <span asp-validation-for="Price"></span>
    </div>
    <div>
        <label asp-for="StartSale"></label><br/>
        <input asp-for="StartSale" class="form-control"/>
        <span asp-validation-for="StartSale"></span>
    </div>
    <div>
        <label asp-for="FinishSale"></label><br/>
        <input asp-for="FinishSale" class="form-control"/>
        <span asp-validation-for="FinishSale"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label"></label>
        <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
    </div>
    <div>
        <label asp-for="Images"></label><br/>
        <input type="file" asp-for="Images" multiple="multiple" class="form-control"/>
        <span asp-validation-for="Images"></span>
    </div>
    
    
    <div class="form-group">
        <input id="createSubmit" type="submit" value="Добавить" class="btn btn-outline-secondary" />
    </div>

</form>
<script src="~/js/getClientTime.js"></script>