﻿
@model IGI.ViewModels.EditLotViewModel;

@{
    ViewBag.Title = "Изменение лота";
    Layout = "_Layout";
}

<h2>Изменение лота</h2>
<form asp-action="EditLot" asp-controller="Account"  enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Now" type="hidden" value="@DateTime.Now.Hour"/>
    <div>
        <label asp-for="Name"></label><br/>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Description"></label><br/>
        <textarea asp-for="Description" name="description" cols="40" rows="3" class="form-control"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label>Стартовая цена (BYN)</label><br/>
        <input type="number" asp-for="Price" class="form-control"/>
        <span asp-validation-for="Price"></span>
    </div>
    <div>
        <label asp-for="StartSale"></label><br/>
        <input asp-for="StartSale" class="form-control"/>
        <span asp-validation-for="StartSale"></span>
    </div>
    <div>
        <label asp-for="FinishSale"></label><br/>
        <input asp-for="FinishSale" class="form-control"/>
        <span asp-validation-for="FinishSale"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Категория</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
    </div>
    <div>
        <label>Фото лота</label><br/>
        <input type="file" asp-for="Images" multiple="multiple" class="form-control"/>
        <span asp-validation-for="Images"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
</form>